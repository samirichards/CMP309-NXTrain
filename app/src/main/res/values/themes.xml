<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NextTrain" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryLightColor</item>
        <item name="colorPrimaryVariant">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryLightColor</item>
        <item name="colorSecondaryVariant">@color/secondaryColor</item>
        <item name="colorOnSecondary">@color/black</item>


        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primaryLightColor</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/secondaryColor</item>

    </style>

    <style name="Theme.NextTrain.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NextTrain.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NextTrain.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="HeaderTitleStyle" parent="TextAppearance.Material3.ActionBar.Title">
        <item name="android:ellipsize">none</item>
    </style>
</resources>
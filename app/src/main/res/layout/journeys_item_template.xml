<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:cardMaxElevation="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        android:background="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/journeys_cardItem_Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 Apr"
                android:layout_margin="8dp"/>

            <StackView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="8dp"
                android:layout_toEndOf="@id/journeys_cardItem_Date">

                <TextView
                    android:id="@+id/journeys_cardItem_HeaderText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dundee to Glasgow Queen Street" />

                <TextView
                    android:id="@+id/journeys_cardItem_TimesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="09:59 - 11:20" />

                <TextView
                    android:id="@+id/journeys_cardItem_TOCNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Direct ScotRail service" />

            </StackView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="8dp"
                android:text=">"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</layout>